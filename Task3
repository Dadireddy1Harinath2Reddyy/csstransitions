css::: 
body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}

.container {
  position: relative;
  width: 400px; /* Adjust the container width as per your requirement */
  height: 300px; /* Adjust the container height as per your requirement */
  margin: 50px auto;
  border: 1px solid #ccc;
  padding: 10px;
}

img {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 100px; /* Adjust the image size as per your requirement */
  height: 100px; /* Adjust the image size as per your requirement */
}

.bottom-left {
  position: absolute;
  bottom: 15px;
  left: 15px;
}

.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
